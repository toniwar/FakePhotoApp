<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.Menu"
    android:background="@drawable/menu_background_drawable"
    >

   <ImageButton
       android:id="@+id/menu_take_photo_btn"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginTop="100dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/menu_choose_photo_btn"
       android:src="@drawable/baseline_photo_camera_24"
       android:background="@drawable/shape_for_menu_icons"


       />

   <ImageButton
       android:id="@+id/menu_choose_photo_btn"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_marginTop="100dp"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toEndOf="@id/menu_take_photo_btn"
       app:layout_constraintEnd_toEndOf="parent"
       android:src="@drawable/baseline_image_search_24"
       android:background="@drawable/shape_for_menu_icons"

       />

   <androidx.appcompat.widget.AppCompatTextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/take_photo_btn_txt"
       app:layout_constraintTop_toBottomOf="@id/menu_take_photo_btn"
       app:layout_constraintEnd_toEndOf="@id/menu_take_photo_btn"
       app:layout_constraintStart_toStartOf="@id/menu_take_photo_btn"
       />

   <androidx.appcompat.widget.AppCompatTextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/choose_photo_btn_txt"
       app:layout_constraintTop_toBottomOf="@id/menu_choose_photo_btn"
       app:layout_constraintEnd_toEndOf="@id/menu_choose_photo_btn"
       app:layout_constraintStart_toStartOf="@id/menu_choose_photo_btn"
       />


</androidx.constraintlayout.widget.ConstraintLayout>