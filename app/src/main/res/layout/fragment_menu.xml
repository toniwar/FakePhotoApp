<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.fragments.Menu"
    android:background="@drawable/menu_background_drawable"
    >

   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/open_natural_disasters_btn"
       android:layout_width="0dp"
       android:layout_height="50dp"
       android:layout_marginTop="50dp"
       android:layout_marginHorizontal="80dp"
       android:text="@string/natural_disasters"
       android:textColor="@color/menu_buttons_text"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@drawable/menu_buttons_drawable"
       />
   <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/open_paranormal_btn"
       android:layout_width="0dp"
       android:layout_height="50dp"
       android:layout_marginTop="50dp"
       android:layout_marginHorizontal="80dp"
       android:text="@string/paranormal"
       android:textColor="@color/menu_buttons_text"
       app:layout_constraintTop_toBottomOf="@id/open_natural_disasters_btn"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       android:background="@drawable/menu_buttons_drawable"
       />

</androidx.constraintlayout.widget.ConstraintLayout>